<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose_Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llLogo"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/splash"
            android:id="@+id/ivIcon"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llLogo"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Type"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/llText"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Banking"
            android:layout_gravity="center_horizontal"
            android:button="@android:color/transparent"
            android:layout_marginTop="20dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:background="@drawable/radio_selector1"
            android:textColor="@drawable/radio_color"
            android:elevation="4dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:paddingLeft="130dp"
            android:paddingRight="130dp"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selector1"
            android:textColor="@drawable/radio_color"
            android:elevation="4dp"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>